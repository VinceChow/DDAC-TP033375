@model DDAC_TP033375.Models.Ship

<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="myModalLabel">Ship Details</h4>
</div>
<div class="modal-body">
	<div class="panel panel-info">
		<div class="panel-heading">
			<h3 class="panel-title">Ship</h3>
		</div>
		<div class="panel-body">
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.Name)</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.Name)</div>
			</div>
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.NumberOfContainerBay)</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.NumberOfContainerBay)</div>
			</div>
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.NumberOfAvailableContainerBay)</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.NumberOfAvailableContainerBay)</div>
			</div>
		</div>
	</div>
	@if (Model.IsScheduled)
	{
		<div class="panel panel-info">
			<div class="panel-heading">
				<h3 class="panel-title">Schedule</h3>
			</div>
			<div class="panel-body">
				<div class="row">
					<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.Schedule.Origin)</strong></div>
					<div class="col-xs-7">@Html.DisplayFor(model => model.Schedule.Origin)</div>
				</div>
				<div class="row">
					<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.Schedule.Destination)</strong></div>
					<div class="col-xs-7">@Html.DisplayFor(model => model.Schedule.Destination)</div>
				</div>
				<div class="row">
					<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.Schedule.DepartureTime)</strong></div>
					<div class="col-xs-7">@Html.DisplayFor(model => model.Schedule.DepartureTime)</div>
				</div>
				<div class="row">
					<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.Schedule.ArrivalTime)</strong></div>
					<div class="col-xs-7">@Html.DisplayFor(model => model.Schedule.ArrivalTime)</div>
				</div>
			</div>
		</div>
	}
	else
	{
		<div class="panel panel-danger">
			<div class="panel-heading">
				<h3 class="panel-title">
					<span class="glyphicon glyphicon-remove-sign" style="text-align: center; font-size: medium" aria-hidden="true"></span> No Schedule Assigned!
				</h3>
			</div>
			<div class="panel-body">
			</div>
		</div>
	}
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Back to List</button>
	@Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
</div>
