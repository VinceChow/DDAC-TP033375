@model DDAC_TP033375.ViewModels.ScheduleDetailsViewModel

<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="myModalLabel">Schedule Details</h4>
</div>
<div class="modal-body">
	<div class="panel panel-info">
		<div class="panel-heading">
			<h3 class="panel-title">
				<span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>&nbsp;&nbsp;&nbsp;&nbsp;Schedules
			</h3>
		</div>
		<div class="panel-body">
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.Schedule.Origin)</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.Schedule.Origin)</div>
			</div>
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.Schedule.Destination)</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.Schedule.Destination)</div>
			</div>
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.Schedule.DepartureTime)</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.Schedule.DepartureTime)</div>
			</div>
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.Schedule.ArrivalTime)</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.Schedule.ArrivalTime)</div>
			</div>
		</div>
	</div>
	@if (Model.Ships.Count == 0)
	{
		<div class="panel panel-danger">
			<div class="panel-heading">
				<h3 class="panel-title">
					<span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>&nbsp;&nbsp;&nbsp;&nbsp;No Ship Assigned!
				</h3>
			</div>
			<div class="panel-body">
			</div>
		</div>
	}
	else
	{
		<div class="panel panel-info">
			<div class="panel-heading">
				<h3 class="panel-title">
					<span class="glyphicon glyphicon-globe" aria-hidden="true"></span>&nbsp;&nbsp;&nbsp;&nbsp;Ships Assigned
				</h3>
			</div>
			<div class="panel-body">
				<table class="table table-striped table-hover">
					<thead>
					<tr>
						<th>Ship Name</th>
						<th>Total Container Bay</th>
						<th>Available Container Bay</th>
					</tr>
					</thead>
					@foreach (var item in Model.Ships)
					{
						<tr>
							<td>@Html.DisplayFor(modelItem => item.Name)</td>
							<td>@Html.DisplayFor(modelItem => item.NumberOfContainerBay)</td>
							<td>@Html.DisplayFor(modelItem => item.NumberOfAvailableContainerBay)</td>
						</tr>
					}
				</table>
			</div>
		</div>
	}
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Back to List</button>
	@Html.ActionLink("Edit", "Edit", new { id = Model.Schedule.Id }, new { @class = "btn btn-warning" })
</div>
