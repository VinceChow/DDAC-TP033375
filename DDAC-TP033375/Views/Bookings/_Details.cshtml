@model DDAC_TP033375.Models.Booking

<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="myModalLabel">Booking Details</h4>
</div>
<div class="modal-body">
	<div class="jumbotron">
		<h3>Shipping Progress <span class="label label-success">@ViewBag.PercentageCompleted%</span></h3>
		<br/>
		<div class="progress progress-striped active">
			<div class="progress-bar progress-bar-success" style="width: @ViewBag.PercentageCompleted%"></div>
		</div>
	</div>
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title">Customer</h3>
		</div>
		<div class="panel-body">
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.Customer.Name)</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.Customer.Name)</div>
			</div>
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>IC / Passport Number</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.Customer.IdentificationNumber)</div>
			</div>
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.Customer.Email)</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.Customer.Email)</div>
			</div>
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.Customer.PhoneNumber)</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.Customer.PhoneNumber)</div>
			</div>
		</div>
	</div>
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title">Booked By</h3>
		</div>
		<div class="panel-body">
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>Agent</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.BookedBy.Name)</div>
			</div>
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>Company</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.BookedBy.CompanyName)</div>
			</div>
		</div>
	</div>
	<div class="panel panel-info">
		<div class="panel-heading">
			<h3 class="panel-title">Container</h3>
		</div>
		<div class="panel-body">
			<table class="table table-striped table-hover">
				<thead>
				<tr>
					<th>Item Type</th>
					<th>Weight (tonne/t)</th>
					<th>Amount</th>
				</tr>
				</thead>
				@foreach (var item in Model.Containers)
				{
					<tr>
						<td>@Html.DisplayFor(modelItem => item.ItemType)</td>
						<td>@Html.DisplayFor(modelItem => item.WeightInTonne)</td>
						<td>@Html.DisplayFor(modelItem => item.Amount)</td>
					</tr>
				}
			</table>
		</div>
	</div>
	<div class="panel panel-info">
		<div class="panel-heading">
			<h3 class="panel-title">Schedule</h3>
		</div>
		<div class="panel-body">
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.Ship.Name)</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.Ship.Name)</div>
			</div>
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.Schedule.Origin)</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.Schedule.Origin)</div>
			</div>
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.Schedule.Destination)</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.Schedule.Destination)</div>
			</div>
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.Schedule.DepartureTime)</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.Schedule.DepartureTime)</div>
			</div>
			<div class="row">
				<div class="col-xs-5" style="text-align: right"><strong>@Html.DisplayNameFor(model => model.Schedule.ArrivalTime)</strong></div>
				<div class="col-xs-7">@Html.DisplayFor(model => model.Schedule.ArrivalTime)</div>
			</div>
		</div>
	</div>

</div>
<div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Back to List</button>
</div>
